<div class="container content">
  <div class="row">
    <div class="well offset3 span6">
      <h2>Edit Profile</h2>
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, autofocus: true, placeholder: "email address" %>
          <%= f.input :password, label: "New Password", hint: "leave blank if you don't want to change it" %>
          <%= f.input :password_confirmation, label: "New Password", hint: "we need your new password a second time" %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes" %>
        </div>
  
        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.
      <br/>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
